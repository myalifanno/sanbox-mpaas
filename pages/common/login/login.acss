.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: 100rpx;
  background-color: #38302a;
}

.component-container {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
}

.input {
  width: 300rpx;
  height: 40rpx;
  margin-bottom: 20rpx;
  border: 1rpx solid #ccc;
  padding: 5rpx;
}

.button {
  width: 300rpx;
  height: 80rpx;
  background-color: #336699;
  color: #fff;
  border: none;
  border-radius: 4rpx;
}
